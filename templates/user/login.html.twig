{% extends 'base.html.twig' %}

{% block title %}Cat Community | Connexion{% endblock %}

{% block body %}
<section class="w-full flex justify-center mt-8">
    <form action="{{ path('user_login') }}" method="post" class="w-1/3 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h2 class="text-gray-700 text-xl mb-4">Connectez-vous pour découvrir des petits chats !</h2>
        {% if error %}
            <div class="error-container">
                <h2 class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</h2>
            </div>
        {% endif %}
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email <span class="text-red-600">*</span></label>
            <input name="_username" value="{{ last_username }}" class="w-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" required>
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password <span class="text-red-600">*</span></label>
            <input name="_password" class="w-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="flex items-center justify-between">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">Connexion</button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">Mot de passe oublié</a>
        </div>
    </form>
</section>
{% endblock %}
